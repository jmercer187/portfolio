@model GuildCars.Models.UIModels.VehicleUI

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="row">
    
    <hr />    
    <div class="panel panel-default">
            <div class="panel-heading">@Model.ModelYear @Model.MakeName @Model.ModelName</div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-3"><div class="col-sm-3"><img src="@Url.Content("~/Images/" + Model.ImageFileName)" alt="@Model.MakeName @Model.ModelName" style="height:150px;width:200px" /></div></div>
                    <div class="col-sm-3">
                        <p>Body Style: @Model.BodyStyleName</p>
                        <p>Transmission: @Model.TransmissionType</p>
                        <p>Color: @Model.ColorName</p>
                    </div>
                    <div class="col-sm-3">
                        <p>Interior: @Model.InteriorType</p>
                        <p>Mileage: @Model.Mileage</p>
                    <p>VIN: @Model.VIN</p>
                </div>
                <div class="col-sm-3">
                    <p>MSRP: @Model.MSRP</p>
                    <p>Sale Price: @Model.SalePrice</p>
                </div>
            </div>
                <p></p>
                <div class="row">
                    <div class="text-center"><p>Description: @Model.VehicleDescription</p></div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-3 col-md-offset-9">
                    <p>@Html.ActionLink("Contact Us", "ContactFromDetail", "Home", new { VIN = Model.VIN }, new { @class = "btn btn-info" })</p>

                </div>
            </div>
        </div>

    

</div>
