@model List<GuildCars.Models.UIModels.VehicleUI>

@{
    ViewBag.Title = "Index";
}

<h2>Admin</h2>
@Html.ActionLink("Add a New Vehicle", "AddVehicle", "Admin", null, new { @class = "btn btn-default" })

<p>search bar here</p>

<div class="row">
    @foreach (var vehicle in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">@vehicle.ModelYear @vehicle.MakeName @vehicle.ModelName</div>

            <div class="panel-body">
                <div class="col-sm-3"><img src="@vehicle.ImageFilePath" /></div>
                <div class="col-sm-3">
                    <p>Body Style: @vehicle.BodyStyleName</p>
                    <p>Transmission: @vehicle.TransmissionType</p>
                    <p>Color: @vehicle.ColorName</p>
                </div>
                <div class="col-sm-3">
                    <p>Interior: @vehicle.InteriorType</p>
                    <p>Mileage: @vehicle.Mileage</p>
                    <p>VIN: @vehicle.VIN</p>
                </div>
                <div class="col-sm-3">
                    <p>MSRP: @vehicle.MSRP</p>
                    <p>Sale Price: @vehicle.SalePrice</p>
                    <p>@Html.ActionLink("Edit", "Edit", "Admin", new { id = vehicle.VehicleId }, new { @class = "btn btn-info" })</p>
                </div>

            </div>
        </div>
        <hr />
    }
</div>
