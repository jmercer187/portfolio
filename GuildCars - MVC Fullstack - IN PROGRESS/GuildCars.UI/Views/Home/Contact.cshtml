@model GuildCars.UI.Models.ContactVM

@{
    ViewBag.Title = "Contact";
}
<h2>Contact Us</h2>

<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
                {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label>Name: </label>
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", type = "ContactName" })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.ContactName)</span>
                    </div>
                    <div class="form-group">
                        <label>Email Address: </label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "Email" })
                    </div>
                    <div class="form-group">
                        <label>Phone Number: </label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type = "Phone" })
                    </div>
                    <div class="form-group">
                        <label>Message: </label>
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", type = "Message" })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Message)</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">


            </div>
        </div>
    </div>
</div>