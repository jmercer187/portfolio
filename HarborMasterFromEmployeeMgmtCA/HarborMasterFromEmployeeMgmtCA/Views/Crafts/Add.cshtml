@model HarborMasterFromEmployeeMgmtCA.Models.AddCraftViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add a Craft</h2>
@Html.ValidationSummary()
@using (Html.BeginForm("Add", "Crafts", FormMethod.Post))
{
    <div class="form-group">
        <label>Owner: First Name</label>
        @Html.TextBoxFor(c => c.OwnerFirstName, new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label>Owner: Last Name</label>
        @Html.TextBoxFor(c => c.OwnerLastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Membership Type</label>
        @Html.DropDownListFor(c => c.MembershipID, Model.MembershipTypes, "-SELECT-", new { @class = "form-control"})
    </div>
    <div class="form-group">
        <label>Craft Name</label>
        @Html.TextBoxFor(c => c.NameOfCraft, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Length</label>
        @Html.TextBoxFor(c => c.LOA, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Craft Type</label>
        @Html.DropDownListFor(c => c.CrafTypeID, Model.CraftTypes, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Dock Assignment</label>
        @Html.TextBoxFor(c => c.DockNumber, new { @class = "form-control" })
    </div>

    @Html.ActionLink("Cancel", "List", "Crafts", null, new { @class = "btn btn-default" })
    <button class="btn btn-primary">Save</button>
}


